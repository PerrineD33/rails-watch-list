<div class="banner">
  <%= link_to "< back to my lists", lists_path  %>
  <div class="container text-center">
    <h1 class=""><%= @list.name %></h1>
    <%= link_to "Ajouterun film.", new_list_bookmark_path(@list), class:'btn btn-secondary'  %>
  </div>
</div>

<div class="container">
  <h2>Mes films</h2>
  <p><%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %><p>
  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="card">
        <h4><%= movie.title %></h4>
        <p><%= movie.overview %></p>
        <p><%= movie.display_rating_one_decimal %></p>

        <%# Icij'ai besoin de trouver "bookmark" pour afficher le commentaire qu'on a rentrÃ© dans le form %>
        <% bookmark = Bookmark.find_by(movie_id: movie, list_id: @list)%>
        <p>
          << <%=  bookmark.comment %> >>
        </p>
        <small class=""><%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %></small>
      </div>
    <% end %>
  </div>
</div>
